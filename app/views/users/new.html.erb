<%= render 'shared/error_messages' %>
<div class="container text-center">
	<h1>Create an Account</h1>
		<div class="form-horizontal col-md-4 col-md-offset-4">
			<%= simple_form_for @user, action: 'create', controller: 'sessions' do |f| %>
				<%= f.input :first_name, label: 'First name' %>
				<%= f.input :last_name, label: 'Last name' %>
				<%= f.input :email, placeholder: "user@example.com", label: 'Email' %>
				<%= f.input :password, hint: "No special characters", label: 'Password' %>
				<%= f.input :password, label: 'Password confirmation' %>
				<%= f.button :submit %>
			<% end %>
		</div>
</div>